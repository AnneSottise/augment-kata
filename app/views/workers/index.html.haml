.row.double-bottom-margin
  .col-xs-12.col-md-6
    %h1
      WORKERS

.row.double-bottom-margin
  .col-xs-12.col-md-6
    %p= link_to 'Add a new worker', new_worker_path

.row
  .col-xs-12.col-md-6
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Status
          %th
        %tbody
          - @workers.each do |worker|
            %tr
              %td= worker.first_name
              %td= worker.status
              %td
                = link_to edit_worker_path(worker), class: 'btn btn-default btn-sm' do
                  %span.fa.fa-edit
                = link_to worker_path(worker), class: 'btn btn-default btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do
                  %span.fa.fa-times





