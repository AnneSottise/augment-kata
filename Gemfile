source 'https://rubygems.org'

gem 'rails', '~> 5.0.0'
gem 'mysql2', '~> 0.3.11'

gem 'haml'          # Sexy HTML
gem 'simple_form'   # Better forms
gem 'enumerize'     # Attr hard listing
gem 'sass-rails'    # Sexy CSS
gem 'jquery-rails'  # jQuery for Rails
gem 'uglifier'
gem 'business_time' # Knowing when a date is a business day or not

group :production do
  gem 'passenger'
end

group :development do
	gem 'listen'
  gem 'pry-rails'         # Debugging
  gem 'mina', '~> 0.3.8'  # Deploy tool
  gem 'better_errors'     # Better error pages
  gem 'binding_of_caller' # Variable Instance inspector
  gem 'rubocop'           # Syntax check
  gem 'awesome_print'     # sexy console output
end
